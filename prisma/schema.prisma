generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Event {
  id        Int      @id @default(autoincrement())
  event     String
  page      String?
  meta      Json?
  createdAt DateTime @default(now())
}

model Lead {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  phone     String
  source    String?
  createdAt DateTime @default(now())
  orders    Order[]
}

model Order {
  id        Int      @id @default(autoincrement())
  leadId    Int?
  amount    Int
  plan      String?
  createdAt DateTime @default(now())

  // relation đến Lead; optional vì leadId có thể null
  lead Lead? @relation(fields: [leadId], references: [id])
}
